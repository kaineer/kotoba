!!!
%html
  %head
    %meta{"http-equiv"=>"content-type", :content=>"text/html;charset=UTF-8"}
    = haml( :blueprint, :layout => false )
    %link{:href=>"/stylesheets/screen.css", :type=>"text/css", :rel=>"stylesheet"}
    %link{:href=>"/stylesheets/app.css", :type=>"text/css", :rel=>"stylesheet"}
    %script{:src=>"/javascripts/jquery.js", :type=>"text/javascript"}
    %script{:src=>"/javascripts/jquery.ream.utils.js", :type=>"text/javascript"}
    %script{:src=>"/javascripts/app.js", :type=>"text/javascript"}
    - if @title
      %title= @title
  %body
    .container.prepend-top
      .span-24.last
        -if flash[:notice]
          .span-24.last.notice= flash[:notice]
        = yield
