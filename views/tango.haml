#container
  #notice= flash[:notice]
  #login{:name=>User.username}
  #title
    -if @tango.prev
      %sup
        %a{:href=>tango_url(@tango.prev.index), :title=>"#{Words::PREVIOUS}"}= @tango.prev.kanji
    %span{:title=>"#{@tango.index}"}= @tango.kanji
    %sup
      %a{:href=>tango_url( @tango.next.index ), :title=>Words::NEXT}= @tango.next.kanji
  - if @user
    #controls
      = "Bookmarks: "
      %a{:href=>bookmark_url( @tango.index )}= "Add"
      %a{:href=>print_bookmarks_url}= "Print"
      %a{:href=>clear_bookmarks_url}= "Clear"
  #spoilers
    %table{:width=>'100%'}
      %tr
        %td{:class=>'right'} Meaning
        %td{:class=>'spoiler',:width=>'100%'}= @tango.meaning
      %tr
        %td{:class=>'right'} Reading
        %td{:class=>'spoiler'}= @tango.kana	
  #history
    - @visited.each do |hid|
      %span
        -if @tango.index == hid
          = @tango.kanji
        -else
          %a{:href=>tango_url( hid )}= Tango[hid].kanji
  - if @user
    #bookmarks
      - unless @bookmarks.empty?
        %table{:width=>"100%"}
          %tr
            %th Kanji
            %th	Reading
            %th	Meaning
          - @bookmarks.each do |bkm|
            %tr
              %td{:width=>"50px"}= Tango[bkm.tango_id].kanji
              %td{:width=>"70px"}= Tango[bkm.tango_id].kana
              %td= Tango[bkm.tango_id].meaning
