.container
  .span-24.last
    %h1= Words::KOTOBA
  -if flash[:notice]
    .span-24.notice= flash[ :notice ]

  .span-18.colborder
  .span-5.last



#container
  #notice= flash[:notice]
  - if User.admin?
    #admin
      %a{:href=>"/admin/registrations"} Registrations
  #login{:name=>User.current ? User.current.email : nil}
  #title
    -if @tango.prev
      %sup
        %a{:href=>Url.tango(@tango.prev.index), :title=>"#{Words::PREVIOUS}"}= @tango.prev.kanji
    %span{:title=>"#{@tango.index}"}= @tango.kanji
    %sup
      %a{:href=>Url.tango( @tango.next.index ), :title=>Words::NEXT}= @tango.next.kanji
  - if @user
    #controls
      = "Bookmarks: "
      %a{:href=>Url.bookmark_set( @tango.index )}= "Add"
      %a{:href=>Url.print_bookmarks}= "Print"
      %a{:href=>Url.clear_bookmarks}= "Clear"
  #spoilers
    %table{:width=>'100%'}
      %tr
        %td{:class=>'right'} Meaning
        %td{:class=>'spoiler',:width=>'100%'}= @tango.meaning
      %tr
        %td{:class=>'right'} Reading
        %td{:class=>'spoiler'}= @tango.kana	
  #history
    - @visited.each do |hid|
      %span
        -if @tango.index == hid
          = @tango.kanji
        -else
          %a{:href=>Url.tango( hid )}= Tango[hid].kanji
  - if @user
    #bookmarks
      - unless @bookmarks.empty?
        = haml( :bookmarks, :layout => false )
